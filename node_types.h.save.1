#include <iostream>
#include <string>

//title
class NODE{
	public:
		int    node_type = 0;
		string title  = "Untitled";

		//int parent_id;
		NODE*  node_parent     = NULL;
		NODE** node_children   = NULL;
		int    children_amount = 0;
};

//text node
class TEXT_NODE: public NODE{
	public:
		string content;
};

//tarea node
class TAREA_NODE: public TEXT_NODE{
	public:
		bool   done;
		float  grade;
		string expiration_date;
};

void node_create(int node_type, string title, NODE node_parent){

	NODE new_node;
	new_node.node_type   = node_type;
	new_node.title       = title;
	new_node.node_parent = node_parent;

}

void node_add_children(NODE node, NODE parent){
	parent.node_children[parent.children_amount] = node;
}

